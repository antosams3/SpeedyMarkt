<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:startColor="#FFC000"
                    android:centerColor="#FFA800"
                    android:endColor="#FFA800"
                    android:angle="0"
                    />
                <stroke
                    android:width="0.7dp"
                    android:color="#BDBDBD" />
                <corners
                    android:radius="15dp" />
            </shape>
        </item>

        <item android:state_pressed="false" android:state_focused="false">
            <shape>
                <gradient
                    android:startColor="#C327B4"
                    android:centerColor="#8B33AF"
                    android:endColor="#2B48A5"
                    android:angle="0"
                    />
                <stroke
                    android:width="0.7dp"
                    android:color="#BDBDBD" />
                <corners
                    android:radius="15dp" />
            </shape>
        </item>

        <item android:state_enabled="true">
            <shape>
                <padding
                    android:left="4dp"
                    android:top="4dp"
                    android:right="4dp"
                    android:bottom="4dp"
                    />
            </shape>
        </item>





</selector>