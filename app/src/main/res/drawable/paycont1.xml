<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:startColor="#FFC000"
                    android:centerColor="#FFA800"
                    android:endColor="#FFA800"
                    android:angle="0"
                    />
                <stroke
                    android:width="0.7dp"
                    android:color="#BDBDBD" />

            </shape>
        </item>

        <item android:state_pressed="false" android:state_focused="false">
            <shape>
                <gradient
                    android:startColor="#FFC819"
                    android:centerColor="#FAAC20"
                    android:endColor="#F38A29"
                    android:angle="0"
                    />
                <stroke
                    android:width="0.7dp"
                    android:color="#BDBDBD" />

            </shape>
        </item>

        <item android:state_enabled="true">
            <shape>
                <padding
                    android:left="4dp"
                    android:top="4dp"
                    android:right="4dp"
                    android:bottom="4dp"
                    />
            </shape>
        </item>





</selector>